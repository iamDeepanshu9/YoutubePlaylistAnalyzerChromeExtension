{
    "manifest_version": 3,
    "name": "YouTube Playlist Duration",
    "version": "1.0",
    "description": "Displays total duration of a YouTube playlist",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.googleapis.com/*",
      "*://*.youtube.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "yt.png",
        "48": "yt.png",
        "128": "yt.png"
      }
    }
  }
  